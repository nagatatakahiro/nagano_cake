<h1>会員情報編集</h1>
<%= form_with model: @user, url: public_customers_path(@user) do |f| %>

    <div class="form-group has-icon">
      <%= f.label :name,"名前" %>
      <%= f.text_field :first_name %> <%= f.text_field :last_name %>
    </div>
    <div class="form-group has-icon">
      <%= f.label :name_kana,"名前" %>
      <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %>
    </div>
    <div class="form-group has-icon">
      <%= f.label :postal_code,"郵便番号" %>
      <%= f.text_field :postal_code %>

    </div>
    <div class="form-group has-icon">
      <%= f.label :address,"住所" %>
      <%= f.text_field :address %>

    </div>
     <div class="form-group has-icon">
      <%= f.label :telephone_number,"電話番号" %>
      <%= f.text_field :telephone_number %>

    </div>
     <div class="form-group has-icon">
      <%= f.label :email,"メールアドレス" %>
      <%= f.text_field :email %>

    </div>

    <%= f.submit "変更を保存", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
  <% end %>
