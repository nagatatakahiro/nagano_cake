<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
<h3>
<%= f.label :ジャンル%><br>
<%= f.text_field :name %>
 <%= f.submit '新規登録' %>
 <% end %>
</h3>
 <h2>ジャンル</h2>
      <table class="table">
       <thead>
        <tr>
