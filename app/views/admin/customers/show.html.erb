<h2><%= customer.last_name %>さんの会員詳細</h2>

  <table class="table">
    <tr>
        <th>会員ID</th>
        <td><%= @customer.id%></td>
    </tr>
    <tr>
        <th>氏名</th>
        <td><%= @customer.full_name%></td>
    </tr>
    <tr>
        <th>フリガナ</th>
        <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
        <th>アドレス</th>
        <td><%= @customer.email %></td>
    </tr>
    <tr>
        <th>販売ステータス</th>
        <td><%= @customer.status_text %></td>
    </tr>
    </table>
    <%= link_to "編集する", edit_admin_customer_path(@customer) %>