<h1>商品 新規登録画面</h1>
<%= form_with model: @item, url: admin_items_path do |f| %>
<%=  f.file_field :image, accept: "image/*"  %>
      <h3>商品名          <%= f.text_field :name %></h3>
      <h3>商品説明        <%= f.text_area :introduction %></h3>
      <h3>ジャンル        <%= f.collection_select :genre_id, Genre.all, :id, :name %></h3>
      <h3>税抜価格        <%= f.number_field :price %>円</h3>
      <h3>販売ステータス   <%= f.select :is_active, [["販売中", true],["販売停止", false]] %></h3>
      <%= f.submit '新規登録', class: "btn btn-primary" %>
<% end %>