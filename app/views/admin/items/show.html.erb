<h2>商品詳細</h2>
<% if @item.image.attached? %>
    <%= image_tag item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
  <table class="table">
    <tr>
        <th>商品名</th>
        <td><%= @item.name%></td>
    </tr>
    <tr>
        <th>商品説明</th>
        <td><%= @item.introduction %></td>
    </tr>
    <tr>
        <th>ジャンル</th>
        <td><%= @item.genre.name %></td>
    </tr>
    <tr>
        <th>税抜き価格</th>
        <td><%= @item.price %></td>
    </tr>

    <tr>
        <th>販売ステータス</th>
        <td><%= @item.is_active %></td>
    </tr>
    </table>
    <%= link_to "編集する", edit_admin_item_path(@item) %>