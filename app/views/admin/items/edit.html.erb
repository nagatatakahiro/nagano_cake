<h1>商品編集</h1>
<%= form_with model: @item, url: admin_item_path(@item) do |f| %>

    <div class="form-group has-icon">
      <%= f.label :image %><br />
      <%= f.file_field :image %>

    </div>
    <div class="form-group has-icon">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group has-icon">
      <%= f.label :genre_id, "ジャンル名" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name %>

    </div>
    <div class="form-group has-icon">
      <%= f.label :price %>
      <%= f.text_field :price %>

    </div>
    <div class="form-group has-icon">
      <%= f.radio_button :is_active, :on_sale %>
  　  　 <%= f.label :is_active,"販売中", {value: :true, style: "display: inline-block;"} %>
  　　 <%= f.radio_button :is_active, :off_sale %>
  　　 <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>

    </div>
    <%= f.submit "変更を保存", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
  <% end %>